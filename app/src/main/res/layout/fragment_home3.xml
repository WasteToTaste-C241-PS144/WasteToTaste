<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintVertical_bias="0"
                    android:background="@drawable/custom_home_container"/>

                <TextView
                    android:id="@+id/greetings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/halouser"
                    android:letterSpacing="0.02"
                    android:layout_marginHorizontal="18dp"
                    android:textSize="27sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dosis_semi_bold"
                    app:layout_constraintTop_toTopOf="@id/rectangle"
                    app:layout_constraintStart_toStartOf="@id/rectangle"
                    app:layout_constraintEnd_toEndOf="@id/rectangle"
                    app:layout_constraintBottom_toTopOf="@id/greetings2"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <TextView
                    android:id="@+id/greetings2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="1dp"
                    android:text="@string/greetings2"
                    android:letterSpacing="0.02"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_regular"
                    app:layout_constraintTop_toBottomOf="@id/greetings"
                    app:layout_constraintStart_toStartOf="@id/greetings"
                    app:layout_constraintEnd_toEndOf="@id/greetings"
                    app:layout_constraintBottom_toBottomOf="@id/rectangle"/>

                <TextView
                    android:id="@+id/tv_my_pantry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lemari Bahan"
                    android:textSize="21sp"
                    android:textColor="?attr/colorOnSurface"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/dosis_semi_bold"
                    app:layout_constraintHorizontal_bias="0"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/rectangle"
                    app:layout_constraintBottom_toTopOf="@id/pantry_container"/>

                <TextView
                    android:id="@+id/tv_pantry_see_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Semua"
                    android:layout_marginBottom="10dp"
                    android:textSize="13sp"
                    android:clickable="true"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/inter_regular"
                    app:layout_constraintStart_toEndOf="@id/tv_my_pantry"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rectangle"
                    app:layout_constraintBottom_toTopOf="@id/pantry_container"
                    android:layout_marginEnd="19dp"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintVertical_bias="1"/>

                <ImageView
                    android:id="@+id/pantry_container"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    android:background="@drawable/home_pantry_container"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_my_pantry">

                </ImageView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_ingredients"
                    android:layout_width="0dp"
                    android:layout_margin="12dp"
                    android:layout_height="0dp"
                    android:elevation="10dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    tools:listitem="@layout/item_ingredients"
                    app:layout_constraintStart_toStartOf="@id/pantry_container"
                    app:layout_constraintEnd_toEndOf="@id/pantry_container"
                    app:layout_constraintTop_toTopOf="@id/pantry_container"
                    app:layout_constraintBottom_toBottomOf="@id/pantry_container"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>