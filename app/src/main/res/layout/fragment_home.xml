<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

        <ImageView
            android:id="@+id/rectangle"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/greetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/greetings"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="25dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="@font/dosis_semi_bold"
            app:layout_constraintTop_toTopOf="@id/rectangle"
            app:layout_constraintStart_toStartOf="@id/rectangle"
            app:layout_constraintEnd_toEndOf="@id/rectangle"/>

        <TextView
            android:id="@+id/greetings2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/greetings2"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            app:layout_constraintTop_toBottomOf="@id/greetings"
            app:layout_constraintStart_toStartOf="@id/greetings"
            app:layout_constraintEnd_toEndOf="@id/rectangle"/>

        <com.google.android.material.search.SearchBar
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="17dp"
            android:hint="@string/searchbar_recipe_hint"
            android:textAppearance="@style/TextAppearance.SearchBar"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle"
            app:layout_constraintEnd_toEndOf="@id/rectangle"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="@id/rectangle"
            app:layout_constraintTop_toBottomOf="@id/greetings2"
            app:layout_constraintVertical_bias="0.232"></com.google.android.material.search.SearchBar>

        <com.google.android.material.search.SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/searchbar_recipe_hint"
            app:layout_anchor="@id/searchBar"
            android:textAppearance="@style/TextAppearance.SearchBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">
        </com.google.android.material.search.SearchView>

</androidx.constraintlayout.widget.ConstraintLayout>